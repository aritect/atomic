---
import "@/assets-ui-lib/styles/main.scss";
import "@/assets-ui-lib/styles/fonts.scss";
import "@/assets/styles/main.scss";

import { DemosGrid } from "@/components/demos-grid";
import { Header } from "@/components/header";
import { Hero } from "@/components/hero";
import { Toaster } from "@/components-ui-lib/toaster";
import { META as meta } from "@/constants/meta";

const pathname = Astro.url.pathname;
---

<script is:inline>
  const getThemePreference = () => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }

    return window.matchMedia("(prefers-color-scheme: dark)").matches
      ? "dark"
      : "light";
  };

  const isDark = getThemePreference() === "dark";
  document.documentElement.classList[isDark ? "add" : "remove"]("dark");
  document.documentElement.setAttribute(
    "data-theme",
    isDark ? "dark" : "light"
  );

  if (typeof localStorage !== "undefined") {
    const observer = new MutationObserver(() => {
      const isDark = document.documentElement.classList.contains("dark");
      localStorage.setItem("theme", isDark ? "dark" : "light");
    });

    observer.observe(document.documentElement, {
      attributes: true,
      attributeFilter: ["class"],
    });
  }
</script>

<html lang="en">
  <head>
    <title>{meta.title}</title>
    <meta name="robots" content="index, follow" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="language" content="English" />
    <meta name="description" content={meta.description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/atomic.webmanifest" />
    <link rel="canonical" href={meta.canonical} />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body>
    <Header client:visible pathname={pathname} />
    <main>
      <div class="pb-9 pt-6 md:pb-24 md:pt-10 xl:pb-32 xl:pt-12">
        <div class="mb-8 md:mb-20 xl:mb-24">
          <Hero client:visible />
        </div>
        <DemosGrid client:visible />
      </div>
    </main>
    <Toaster position="top-center" client:only="react" />
  </body>
</html>
